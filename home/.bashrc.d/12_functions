#!/usr/bin/bash

find_git_branch ()
{
	# Git repo?
	$(git branch &> /dev/null)

	if [[ $? == 0 ]]; then
		echo $(git branch | grep \* | awk '{print $NF}')
	fi
}


find_mercurial_branch ()
{
	# Mercurial repo?
	$(hg branch &> /dev/null)

	if [[ $? == 0 ]]; then
		echo $(hg branch | awk '{print $NF}')
	fi
}

find_branch ()
{
	foo=$(find_git_branch)
	if [[ $? == 1 ]]; then
		foo=$(find_mercurial_branch)
	fi

	if [[ -z "${foo}" ]]; then
		return
	fi
	echo " ${BRANCH_COLOR}(${foo})${NO_COLOR}"
}

# If the last command was not a success, print the result value
print_last_failure ()
{
    	local result=$?
	if [[ ${result} != 0 ]]; then
		echo "${ERROR_COLOR}[${result}]${NO_COLOR}"
    	else
	    echo ""
	fi
}
