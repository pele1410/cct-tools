#!/usr/bin/bash

###########################################################################
function hgClone
{
	about 'Clone a mercurial repo'
	param 1: 'Repository to clone from [uk, us, uk-tmp, us-test, uk-exp (Default: uk)'
	param 2: 'Package to clone'
	example '$ hgClone uk ASVcommon'
	group 'asv'

	if [[ "$1" == "" ]];
	then
	        echo "Missing repository.  Pease select from [uk, us, uk-tmp, us-test, uk-exp]"
		return
	fi

	if [[ "$2" == "" ]];
	then
	        echo "Missing package.  Pease enter package to clone"
		return
	fi

	case "$1" in
	uk)
        	hg clone $HGREPO/$2;
        	;;
	uk-tmp)
        	hg clone $HGREPO_TMP/$2;
        	;;
	uk-exp)
        	hg clone $HGREPO_EXP/$2;
        	;;
	us)
        	hg clone $HGREPOUS/$2;
        	;;
	us-test)
        	hg clone $HGREPOUS_TEST/$2;
        	;;
	*)
	        echo "Unknown repository.  Pease select from [uk, us, uk-tmp, us-test, uk-exp]"
        	;;
	esac
}
