uk-tmp.prefix	   = ssh://devel.asvglobal.com//devel/unammed
uk-tmp.username	   = chris.thompson

us.prefix          = ssh://devel-source.asvus.com//data/source
us.username        = chris.thompson

us-test.prefix     = ssh://devel-source.asvus.com//data/source
us-test.username   = chris.thompson

[paths]
uk                 = ssh://devel.asvglobal.com//devel/src/hg-repository
uk-exp             = ssh://devel.asvglobal.com//devel/src/hg-repository-experimental
uk-tmp             = ssh://devel.asvglobal.com//devel/unammed
us                 = ssh://devel-source.asvus.com//data/source
us-test            = ssh://devel-source.asvus.com//data/source-testing/

[extensions]
progress           =
pager              =
hgext.fetch        =
shelve             =
convert            =
hgext.extdiff      =
purge              =
amend              =
strip              =
record             =

[alias]
parent-branch      = ! export REV=$1; export REV=${REV:-.} ; echo hg parent-branch ${REV}; $HG log -r "parents(min(branch('${REV}')))"
; Add user to blame
blame              = blame -n -u
crecord            = commit -i
last               = diff -c .
.		   = last
shelves            = shelve --list
ar                 = addremove
describe           = log -r . --template "{latesttag}{sub('^-0-.*', '', '-{latesttagdistance}-m{node|short}')}\n"
gethash            = log -r . --template="Commit: {rev}\nAuthor: {author}\nAge: {date|age}\nDescription: {desc}\nManifest Hash: {node}\n"
nuke               = !$HG revert --all; $HG purge --all; $HG purge --dirs
clog               = glog -v --style ~/.hg.d/clog.style
cl                 = clog
slog               = glog -v --style ~/.hg.d/slog.style
sl                 = slog
nlog               = glog --style ~/.hg.d/nlog.style
nl                 = nlog
sglog              = glog --style ~/.hg.d/sglog.style
sgl                = sglog
dlog               = glog --style ~/.hg.d/dlog.style
dl                 = dlog

[pager]
pager              = LESS='FRX' less
ignore             = version, help, update, serve, record
attend             = annotate, cat, diff, export, glog, log, qdiff, clog, slog, nlog, sglog, dlog, in, out, sl, cl, nl, sgl, dl, last , .
