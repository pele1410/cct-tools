[ui]
username           = Christopher Thompson <cthompson@metalsharkboats.com>
merge              = meld
interface          = curses
ssh                = ssh -C -i ~/.ssh/id_rsa

[email]
from               = cthompson@metalsharkboats.com

[extensions]
amend              =
convert            =
evolve             =
graphlog           =
histedit           =
hgext.extdiff      =
hgext.fetch        =
pager              =
progress           =
purge              =
rebase             =
record             =
remotenames        =
shelve             =
strip              =

[alias]
; Visualizations
blame              = blame -n -u
last               = diff -c .
parent-branch      = ! export REV=$1; export REV=${REV:-.} ; $HG log -r "parents(min(branch('${REV}')))"  --template="{branch}\n"
branch-first-commit = ! export REV=$1; export REV=${REV:-.} ; $HG id -r "min(branch('${REV}'))" --template="{node}\n"
clog               = glog -v --style ~/.hg.d/clog.style
slog               = glog -v --style ~/.hg.d/slog.style
nlog               = glog --style ~/.hg.d/nlog.style
sglog              = glog --style ~/.hg.d/sglog.style
dlog               = glog --style ~/.hg.d/dlog.style
; Modifiers
crecord            = commit -i
describe           = log -r . --template "{latesttag}{sub('^-0-.*', '', '-{latesttagdistance}-m{node|short}')}\n"
gethash            = log -r . --template="Commit: {rev}\nAuthor: {author}\nAge: {date|age}\nDescription: {desc}\nManifest Hash: {node}\n"
merge-parent       = ! export PARENT_BRANCH=$($HG parent-branch); $HG merge $PARENT_BRANCH && $HG commit -m "Merge from parent-branch $PARENT_BRANCH"
nuke               = !$HG revert --all; $HG purge --all; $HG purge --dirs
pup                = !$HG pull && $HG up
rebase-branch      = ! $HG rebase -s $($HG branch-first-commit) -d $($HG parent-branch) --keepbranches
; Lazy
.                  = last
ar                 = addremove
cl                 = clog
dl                 = dlog
he                 = histedit
nl                 = nlog
sgl                = sglog
shelves            = shelve --list
sl                 = slog

[pager]
pager              = LESS='FRX' less
ignore             = version, help, update, serve, record
attend             = annotate, blame, blame, cat, diff, export, glog, log, qdiff, clog, slog, nlog, sglog, dlog, in, out, sl, cl, nl, sgl, dl, last , .

[phases]
publish = false

[subrepos]
git:allowed=true